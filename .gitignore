# ============================================
# Root .gitignore (Mono-repo)
# ============================================

# === IDE ===
.vscode/
!.vscode/settings.json
!.vscode/launch.json
!.vscode/extensions.json
.idea/
*.iml
*.ipr
*.iws

# === Agent ===
.agent/

# === OS ===
.DS_Store
*.swp
*.tmp
*.temp
*~

# === Secrets & Environment ===
.env
.env.*
*.local
**/secrets/

# === Local docs ===
_local_docs/

# ============================================
# Flutter / Dart (app/)
# ============================================
app/.dart_tool/
app/.flutter-plugins
app/.flutter-plugins-dependencies
app/.packages
app/.pub-cache/
app/.pub/
app/devtools_options.yaml
*.log

# Generated Dart files (build_runner)
**/*.g.dart

# Android
app/android/.gradle/
app/android/build/
app/android/app/debug/
app/android/app/profile/
app/android/app/release/
app/android/local.properties
**/problems-report.html
*.jks
*.keystore

# iOS
app/ios/.symlinks/
app/ios/Pods/
app/ios/Podfile.lock
app/ios/.cocoapods/
app/ios/Runner.xcworkspace/
app/ios/Flutter/Flutter.framework/
app/ios/Flutter/Flutter.podspec

# Web
app/web/.dart_tool/

# Test
app/coverage/
app/.test_coverage.dart

# Build outputs
**/build/
*.apk
*.aab
*.ipa
*.app
*.dSYM.zip
*.dSYM

# Lock files (keep pubspec.lock)
*.lock
!app/pubspec.lock

# Isar
default.isar
default.isar.lock
isar.dll
*.isar-lck
test_*.isar*

# ============================================
# Go Backend (backend/)
# ============================================

# Binaries
backend/*.exe
backend/*.exe~
backend/*.dll
backend/*.so
backend/*.dylib
backend/bin/
backend/cmd/api/api
backend/cmd/api/api.exe

# Build & temp
backend/tmp/
backend/vendor/

# Test & Coverage
backend/*.test
backend/*.out
backend/coverage.*

# Debug
backend/__debug_bin*

# Swagger generated docs (可選擇是否追蹤)
# backend/docs/swagger.json
# backend/docs/swagger.yaml
# backend/docs/docs.go

